<%-include partiels/head%>
    <%-include partiels/nav%>
        <!-- <link rel="stylesheet" type="text/css" href="/stylesheets/inscription.css"> -->
        <div class="clearfix"></div>
        <!--FORMULAIRE D INSCRIPTION CANDIDAT-->
        <div class="container border border-dark my-5 clearfix formulaire">
            <h2>CANDIDAT</h2>

            <h6 class="text-danger">
                <%=erreur%>
            </h6>

            <form action="/candidat/new" method="POST">

                <!--NOM,PRENOM-->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Nom</label>
                        <input type="text" class="form-control" id="inputNom" name="nom" placeholder="Nom" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPrenom">Prénom</label>
                        <input type="prenom" class="form-control" id="inputPrenom" name="prenom" placeholder="Prénom" required>
                    </div>
                </div>

                <!--DATE DE NAISSANCE-->
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputAddress2">Date de Naissance</label>
                        <input type="date" class="form-control" id="dateNaissance" name="dateNaissance" placeholder="jj/mm/aaaa" required>
                    </div>
                </div>

                <!--ADRESSE,VILLE-->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputAddress">Adresse</label>
                        <input type="text" class="form-control" id="inputAddresse" name="adresse" placeholder="Votre Adresse" required>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputCity">Ville</label>
                        <input type="text" class="form-control" id="inputCity" name="ville" required>
                    </div>
                </div>
                <!--CODE POSTAL -->
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label for="inputCp">Code Postal</label>
                        <input type="text" class="form-control" id="cp" name="codePostal" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputTel">Téléphone</label>
                        <input type="tel" class="form-control" id="tel" name="phone" required>
                    </div>
                </div>

                <!--EMAIL-->
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" id="inputEmail4" name="email" placeholder="Votre email" required>
                    </div>

                    <!--PASSWORD-->
                    <div class="form-group col-md-4">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" id="inputPassword" name="motDePasse" class="form-control" aria-describedby="passwordHelpInline" required>
                        <small id="passwordHelpInline" class="text-muted">
                        doit comporter entre 8-20 characteres de long.
                    </small>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="inputPassword">Confirmer mot de passe</label>
                        <input type="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpInline" required>
                        <small id="passwordHelpInline" class="text-muted">
                        <!-- Confirmez votre mot de passe. -->
                    </small>
                    </div>
                </div>
                <div class="form-row"><button type="submit" class="col-1 btn btn-primary m-2">Valider</button></div>
            </form>
        </div>
        <%-include partiels/foot%>